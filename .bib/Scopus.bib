@ARTICLE{Mondragon-Estrada2023,
	author = {Mondragon-Estrada, Enrique and Kirschning, Ingrid and Nolazco-Flores, Juan Arturo and Camacho-Zuñiga, Claudia},
	title = {Fostering digital transformation in education: technology enhanced learning from professors’ experiences in emergency remote teaching},
	year = {2023},
	journal = {Frontiers in Education},
	volume = {8},
	doi = {10.3389/feduc.2023.1250461},
	url = {https://www.scopus.com/inward/record.uri?eid=2-s2.0-85169564311&doi=10.3389%2ffeduc.2023.1250461&partnerID=40&md5=e4c6843099aff2799003708a42aa0d1b},
