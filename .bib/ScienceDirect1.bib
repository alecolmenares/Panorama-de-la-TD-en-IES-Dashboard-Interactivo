pages = {106607},
year = {2023},
issn = {2352-4928},
doi = {https://doi.org/10.1016/j.mtcomm.2023.106607},
url = {https://www.sciencedirect.com/science/article/pii/S2352492823012989},
author = {Georgios Konstantopoulos and Costas A. Charitidis and Miguel A. Bañares and Raquel Portela and Nikolaj Zangenberg and Ennio Capria and Marco Sebastiani and Gerhard Goldbeck and Elias Koumoulos and Bojan Boskovic and Spyros Diplas and Natalia Konchakova and Ilian Todorov and Donna Dykeman and Silvia Giovanna Avataneo and Marco Falzetti and Enrique Lozano Diz and Julian J. Reinosa and Ekaterina Burov and Dejan Škrelić and Nina Jeliazkova and Bastian Barton and Giovanni Masotti and Tommaso Tamarozzi and Iván Moya Alcón},
