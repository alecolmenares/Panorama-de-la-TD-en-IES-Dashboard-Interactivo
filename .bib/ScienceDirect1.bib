url = {https://www.sciencedirect.com/science/article/pii/S1877050921017348},
author = {Elena Kornyshova and Judith Barrios},
keywords = {Enterprise Architecture, TOGAF-ADM, Knowledge Representation, Process Models, Requirements Management, Questionnaire},
abstract = {The Open Group Architecture Framework (TOGAF) is one of the most used by large-scale companies Enterprise Architecture (EA) frameworks. It contains the Architecture Development Method (ADM) to represent knowledge used to analyze and build the EA for an organization. It is a very detailed method and covers all phases of EA construction and maintenance. However, the described guidelines are hard to follow as they are rich and numerous. Our goal is to provide a process-based knowledge representation of the ADM method to better guide EA professionals using TOGAF and to facilitate the TOGAF teaching with students. In our previous work, we have already proposed the process-oriented graphical representation of the requirements management (RM) phase of TOGAF-ADM. In this work, we carried out a questionnaire to evaluate the process representation of the TOGAF-ADM RM phase in comparison with its textual representation issue from the TOGAF documentation. The obtained results confirmed that process models are helpful to better represent the knowledge included in TOGAF-ADM textual guidelines; thus, practitioners have a more complete description of how to proceed while using TOGAF.}
}
@article{MOURTZIS201931,
title = {Modelling of Customer Oriented Applications in Product Lifecycle using RAMI 4.0},
journal = {Procedia Manufacturing},
volume = {28},
pages = {31-36},
year = {2019},
note = {7th International conference on Changeable, Agile, Reconfigurable and Virtual Production (CARV2018)},
issn = {2351-9789},
doi = {https://doi.org/10.1016/j.promfg.2018.12.006},
url = {https://www.sciencedirect.com/science/article/pii/S2351978918313489},
author = {Dimitris Mourtzis and Antonis Gargallis and Vasilios Zogopoulos},
keywords = {Industry 4.0, Product Lifecycle, RAMI 4.0},
abstract = {As Industry 4.0 technologies are increasing in manufacturing, more and more applications emerge, covering different aspects of product lifecycle. Following the digitization trend that characterized the last decades, manufacturers integrate Information and communications technologies in their approaches that support their progression towards this new era. New solutions that facilitate the integration of customers in the product design and manufacturing, integrating unique regional requirements become part of the standard design procedure followed by modern manufacturing. The wide infiltration of mobile devices in end- users’ life creates an open stream of valuable data that may affect product design and drive the design of manufacturing networks. To support this process, it is important to classify the novel integrations that act on different parts of the lifecycle using state of the art Industry 4.0 architectures, facilitating manufacturers to keep track on how its development may affect their production. This paper presents how a set of tools designed to integrate customers in the product design and manufacturing that consider Industry 4.0 technologies may be classified using the RAMI 4.0 architecture. The tools affect different parts of the product’s lifecycle, connecting the end-user with the product design and manufacturing network design and RAMI 4.0 was selected to model the information flow between the different levels that provide increased sustainability that benefits both the manufacturer and the customers. Classifying the tools using standardized models aims to support their integration in future developments that consider Internet of Things. The aforementioned tools are applied in a refrigerator production use case provided by a large white goods manufacturer.}
}
@article{AGGARWAL201913,
title = {Blockchain for smart communities: Applications, challenges and opportunities},
journal = {Journal of Network and Computer Applications},
