@article{OLOYEDE2023e17654,
title = {Measuring the impact of the digital economy in developing countries: A systematic review and meta- analysis},
journal = {Heliyon},
volume = {9},
number = {7},
pages = {e17654},
year = {2023},
issn = {2405-8440},
doi = {https://doi.org/10.1016/j.heliyon.2023.e17654},
